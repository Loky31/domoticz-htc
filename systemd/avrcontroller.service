[Unit]
Description=AVR Controller

[Service]
Type=forking
PIDFile=/home/domoticz/avr-controller/avrcontroller.pid
ExecStart=/usr/bin/nodejs daemon.js start
ExecStop=/usr/bin/nodejs daemon.js stop
Restart=always
RestartSec=120
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=avrcontroller
User=domoticz
Group=domoticz
Environment=NODE_ENV=production
WorkingDirectory=/home/domoticz/avr-controller/

[Install]
WantedBy=multi-user.target
